<!doctype html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Loan Amortization Schedule</title>
	
	<style>
		table.altrowstable {
			font-family: verdana,arial,sans-serif;
			font-size:11px;
			color:#333333;
			border-width: 1px;
			border-color: #a9c6c9;
			border-collapse: collapse;
			width: 80%;
			margin:0 auto;
		}
		table.altrowstable th {
			border-width: 1px;
			padding: 8px;
			border-style: solid;
			border-color: #a9c6c9;
		}
		table.altrowstable td {
			border-width: 1px;
			padding: 8px;
			border-style: solid;
			border-color: #a9c6c9;
		}
		
		.text-center {
			text-align: center;
		}
		
		.no-border {
			border: none!important;
		}
	</style>
</head>
<body>
<div class="container w-50 mt-2 border">
	<table class="altrowstable">
		<thead>
		<tr>
			<th colspan="4" class="text-center no-border"><h3>Loan Amortization Report</h3></th>
		</tr>
		<tr>
			<td class="no-border">Date:<br>{{ loanData.printedDate }}</td>
			<td class="no-border">Loan:<br>${{ loanData.amount }}</td>
			<td class="no-border">Rate:<br>{{ loanData.interestRate }}%</td>
			<td class="no-border">Origination Fee:<br>${{ loanData.fee }}</td>
		</tr>
		<tr>
			<td class="no-border">Payment<br>${{ loanData.payment }}</td>
			<td class="no-border">APR<br>TBD</td>
			<td class="no-border">Interest<br>${{ loanData.interest|number_format(2) }}</td>
			<td class="no-border"></td>
		</tr>
		</thead>
		<thead>
		<tr>
			<th scope="col">Payment</th>
			<th scope="col">Interest</th>
			<th scope="col">Principal</th>
			<th scope="col">Balance</th>
		</tr>
		</thead>
		<tbody>
		{% if loanData.schedule is not empty %}
			{% for term in loanData.schedule %}
				<tr>
					<td>${{ term.payment|number_format(2) }}</td>
					<td>${{ term.interest|number_format(2) }}</td>
					<td>${{ term.principal|number_format(2) }}</td>
					<td>${{ term.balance|number_format(2) }}</td>
				</tr>
			{% endfor %}
		{% endif %}
		</tbody>
	</table>
</div>

